<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageViewLogro"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button_background"
            android:src="@drawable/cut" /> <!-- Reemplaza con un drawable adecuado -->

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/textViewNombreLogro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿400? Puedes con 1000"
                android:textSize="13dp"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/textViewFechaLogro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:text="10/12/2024"
                android:textAppearance="?attr/textAppearanceListItemSmall" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
