<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.raywenderlich.android.runtracking.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_userInfoDisplayFragment"
            app:destination="@id/userInfoDisplayFragment" />
        <action
            android:id="@+id/action_profileFragment_to_userInfoUpdateFragment"
            app:destination="@id/userInfoUpdateFragment" />
    </fragment>
    <activity
        android:id="@+id/authActivity"
        android:name="com.raywenderlich.android.rwandroidtutorial.login.AuthActivity"
        android:label="activity_auth"
        tools:layout="@layout/activity_auth" />
    <activity
        android:id="@+id/homeActivity"
        android:name="com.raywenderlich.android.rwandroidtutorial.login.HomeActivity"
        android:label="HomeActivity" />
    <fragment
        android:id="@+id/clasificacionFragment"
        android:name="com.raywenderlich.android.rwandroidtutorial.clasificacion.ClasificacionFragment"
        android:label="fragment_clasificacion"
        tools:layout="@layout/fragment_clasificacion" />
    <fragment
        android:id="@+id/logrosFragment"
        android:name="com.raywenderlich.android.rwandroidtutorial.Logros.LogrosFragment"
        android:label="fragment_logros"
        tools:layout="@layout/fragment_logros" />
    <fragment
        android:id="@+id/userInfoDisplayFragment"
        android:name="com.raywenderlich.android.runtracking.UserInfoDisplayFragment"
        android:label="fragment_user_info_display"
        tools:layout="@layout/fragment_user_info_display" />
    <fragment
        android:id="@+id/userInfoUpdateFragment"
        android:name="com.raywenderlich.android.runtracking.UserInfoUpdateFragment"
        android:label="fragment_user_info_update"
        tools:layout="@layout/fragment_user_info_update" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.raywenderlich.android.runtracking.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_clasificacionFragment2"
            app:destination="@id/clasificacionFragment" />
    </fragment>
    <fragment
        android:id="@+id/navBarFragment"
        android:name="com.raywenderlich.android.runtracking.NavBarFragment"
        android:label="fragment_nav_bar"
        tools:layout="@layout/fragment_nav_bar" />
</navigation>